{
	"name": "Bitcoin Microformats",
	"version": "1.0",
	"manifest_version": 2,

	"description": "Detects Bitcoin microformat data in web pages. This is an ongoing project.",
	"icons": {
		"16": "bitcoin16.png",
		"48": "bitcoin48.png",
		"128": "bitcoin128.png"
	},
	/*"default_locale": "en",*/

	"page_action": {
		"default_title": "Bitcoin address(es) found on this page.",
		"default_icon": "bitcoin16.png"
	},

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*"],
			"js": ["microformat_bitcoin_content_script.js"]
		}
	],
	"permissions": []
}
